            </div>
        </div>
        <div class="form-row">
            <div class="col-12 col-sm-4 form-group">
                <label asp-for="PassportNo1"></label>
                <input asp-for="PassportNo1" class="form-control" />
                <span asp-validation-for="PassportNo1" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-4 form-group">
                <label asp-for="MobileNo1"></label>
                <input asp-for="MobileNo1" class="form-control" />
                <span asp-validation-for="MobileNo1" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-4 form-group">
                <label asp-for="Email1"></label>
                <input asp-for="Email1" class="form-control" />
                <span asp-validation-for="Email1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12  form-group">
                <label asp-for="Name2"></label>
                <input asp-for="Name2" class="form-control" />
                <span asp-validation-for="Name2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-12 col-sm-4 form-group">
                <label asp-for="PassportNo2"></label>
                <input asp-for="PassportNo2" class="form-control" />
