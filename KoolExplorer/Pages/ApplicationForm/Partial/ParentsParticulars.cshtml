            </div>
            <div class="col-12 col-sm-4 form-group">
                <label asp-for="MobileNo2"></label>
                <input asp-for="MobileNo2" class="form-control" />
                <span asp-validation-for="MobileNo2" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-4 form-group">
                <label asp-for="Email2"></label>
                <input asp-for="Email2" class="form-control" />
                <span asp-validation-for="Email2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-12 col-sm-6 form-group">
                <label asp-for="HomeTelNo"></label>
                <input asp-for="HomeTelNo" class="form-control" />
