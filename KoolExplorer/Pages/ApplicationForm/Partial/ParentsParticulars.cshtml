            </div>
            <div class="col-12 col-sm-6 form-group">
                <label asp-for="HouseholdIncome"></label>
                <select asp-for="HouseholdIncome" asp-items="@Model.HouseholdIncomeList" class="form-control" data-validation="required">
                </select>
                <span asp-validation-for="HouseholdIncome" class="text-danger"></span>
            </div>
