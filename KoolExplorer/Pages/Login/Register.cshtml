@page
@model KoolExplorer.Pages.Login.RegisterModel

@{
    ViewBag.Title = "User Registration";
}

<h1>User Registration</h1>

<div class="row">
    <div class="col-md-12" style="font-size:20px">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="registerModel.Email"></label>
                <input asp-for="registerModel.Email" class="form-control" />
                <span asp-validation-for="registerModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="registerModel.Password"></label>
                <input asp-for="registerModel.Password" class="form-control" />
                <span asp-validation-for="registerModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="registerModel.ConfirmPassword"></label>
                <input asp-for="registerModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="registerModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="registerModel.RoleName"></label>
                <select asp-for="registerModel.RoleName" asp-items="@Model.registerModel.RoleList" class="form-control select-area" data-validation="required" id="RoleList">
                </select>
                <span asp-validation-for="registerModel.RoleName" class="text-danger" style="color:red"></span>
            </div>   
            <div class="form-group" id="SchoolList" >
                <label asp-for="registerModel.PreSchoolId"></label>
                <select asp-for="registerModel.PreSchoolId" asp-items="@Model.PreSchoolList" class="form-control select-area" id="PreSchool">
                </select>
                <span asp-validation-for="registerModel.PreSchoolId" class="text-danger" style="color:red"></span>
            </div>
            <div class="form-group">
                <a asp-page="/Login/Login">Sign in</a>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success btn-lg btn-block">Register</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
     @*sweetalert*@
    <script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>
    <script>

        (function () {
            $("#SchoolList").hide()
            $("#RoleList").change(function () {
                if ($("#RoleList").val() === "Operator") {
                    $("#SchoolList").show();
                }
                else
                    $("#SchoolList").hide()
            })

            $("form").submit(function (event) {
                console.log($("#PreSchool").val())
                if ($("#RoleList").val() === "Operator" && $("#PreSchool").val() == "") {
                    swal("Please select your Pre School!")
                    return false
                }
                return true
            });
        })();
    </script>
}
